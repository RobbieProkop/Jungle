<h1 class="mt-3 mb-3">Login</h1>

<%= form_for :user, url: '/login', class:"form-control" do |form| %>
  
  <div class="container align-items-center">
    <div class="form-group mb-2">
      <%= form.label :email %>
      <%= form.text_field :email, class: 'form-control' %>
    </div>
    <div class="form-group mb-2">
      <%= form.label :password %>
      <%= form.text_field :password, class: 'form-control' %>
    </div>
    <%= form.submit 'Submit', class: 'btn btn-success mt-3' %>
  </div>

<% end %>